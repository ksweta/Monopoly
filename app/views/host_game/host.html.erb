<div class="banner">	
	<div class="title-header">Monopoly</div>
	<div class="login">
		<% if user_signed_in? %>
		<div class="login-text"> Logged in as <strong><%= current_user.email %></strong>.</div>
		<div class="logout-button">
			<%= button_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
		</div>
		<% end %>

		<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
		<% end %>
		</div>
	</div>

<div class="content">
	<h1>Host a Game</h1>
	<p>Number of players: 3</p>
	<p>Public or private game: Private</p>

	<div class="add-player"><a href="">Invite Player</a></div>
	<div class="add-player"><a href="">Invite Player</a></div>
	<div class="add-player"><a href="">Invite Player</a></div>
</div>

<div class="start-button">
		<form action="/game/">
			<input type="submit" value="Start Game">
		</form>
	</div>
