<div class="banner">	
	<div class="title-header">Monopoly</div>
	<div class="login">
		<% if user_signed_in? %>
		<div class="login-text"> Logged in as <strong><%= current_user.email %></strong>.</div>
		<div class="logout-button">
			<%= button_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
		</div>
		<% else %>
		<%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
		<%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
		<% end %>

		<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
		<% end %>
	</div>
</div>


<div class="body-content">
	<h1>List of Games</h1>
	<% if @games.empty? then %> 
	<p> No games currently being started.</p>
	<% else %>

	<div class="games-list">
	<table>
	<tr>
    <th>Game ID</th>
    <th>Host</th> 
    <th>Players</th>
    <th>Status</th>
  </tr>

	<% @games.each do |game| 
		 if game.status == "initialized"
		%>
			<tr>
				<td><%= game.id %></td> 
				<td><%= game.players[0].email %> </td>
				<td><%= game.players.length %></td>
				<td><%= game.status %></td>
				<td>
					<form action="game/join">
					<input type="hidden" value="<%= game.id %>" name="id">
					<input type="submit" value="Join">
				</td>
	</form>
	</tr>
	<% end 
		end %>
	</table>
	</div>
	<% end %>

	<form action="game/new">
		<input type="submit" value="Create Game">
	</form>
</div>

